@model GM.Web.Areas.Main.Blog.Models.BlogPostViewer

<div class="well">
    <div class="row">
        <h3 style="text-align:center">@Model.BlogPost.Title</h3>
    </div>
    <div class="row">
        <img style="margin-left:auto; margin-right:auto; display:block" src="../../Content/bootstrap/img/glyphicons-halflings.png" />
    </div>
    <div class="row" style="margin:20px">
        @Html.Raw(Model.BlogPost.Body)
    </div>
    <div class="row" style="margin:20px">
        <div style="width:100%; text-align:center; font-size:small"><i>Posted by Graham Meehan on @Model.BlogPost.Created.ToLongDateString() at @Model.BlogPost.Created.ToLongTimeString()</i></div>
    </div>
    <div class="row" style="font-size:small; margin:20px 20px 0px 20px">
        <div class="fb-comments" data-href="http://grahammeehan.com@("#"+Model.BlogPost.Id)" data-num-posts="5"></div>
    </div>
</div>

